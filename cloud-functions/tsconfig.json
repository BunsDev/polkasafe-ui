{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "ES2020",
    "noFallthroughCasesInSwitch": true,
    "lib": [
      "ES2021.String"
    ]
  },
  "compileOnSave": true,
  "include": [
    "src"
  ]
}
